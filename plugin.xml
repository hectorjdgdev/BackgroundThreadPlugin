<?xml version='1.0' encoding='utf-8'?>
<plugin id="corodva-pluin-osbackgroundtask" version="0.0.1"
    xmlns="http://apache.org/cordova/ns/plugins/1.0"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <name>OSBackgroundTask</name>
    <description>OutSystems Template for Cordova Plugin</description>
    <author>OutSystems Inc</author>

    <engines>
        <engine name="cordova" version=">=7.1.0"/>
        <engine name="cordova-android" version=">=6.3.0" />
    </engines>


    <js-module name="OSBackgroundTask" src="www/OSBackgroundTask.js">
        <clobbers target="cordova.plugins.OSBackgroundTask" />
    </js-module>

    <platform name="android">

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="OSBackgroundTask">
                <param name="android-package" value="com.outsystems.plugins.osbackgroundtask.OSBackgroundTask" />
            </feature>

            <preference name="GradlePluginKotlinEnabled" value="true" />
            <preference name="GradlePluginKotlinCodeStyle" value="official" />
            <preference name="AndroidXEnabled" value="true"/>

        </config-file>


        <config-file parent="/*" target="AndroidManifest.xml">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <source-file src="src/android/OSBackgroundTask.kt" target-dir="app/src/main/kotlin/org/apache/cordova/OSBackgroundTask" />

        <framework src="libs/android/build.gradle" custom="true" type="gradleReference" />
        <framework src="androidx.appcompat:appcompat:1.3.0" />
        <framework src="androidx.constraintlayout:constraintlayout:2.0.4" />
        <framework src="org.jetbrains.kotlinx:kotlinx-coroutines-core-jvm:1.4.3" />
        <framework src="org.jetbrains.kotlinx:kotlinx-coroutines-android:1.4.3" />

    </platform>

    <platform name="ios">
        <config-file parent="/*" target="config.xml">
            <feature name="OSBackgroundTask">
                <param name="ios-package" value="OSBackgroundTask" />
            </feature>
        </config-file>
        <source-file src="src/ios/OSBackgroundTask.m" />
    </platform>

</plugin>